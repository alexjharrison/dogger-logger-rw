enum Role {
  SUPERADMIN
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String
  role      Role     @default(USER)
  Walk      Walk[]
  photoUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Status {
  RECEIVING
  ADOPTION
}

model Dog {
  id        Int       @id @default(autoincrement())
  name      String
  gender    Gender
  Walk      Walk[]
  weight    Decimal?
  breed     String?
  neutered  Boolean?
  status    Status    @default(RECEIVING)
  photoUrl  String?
  birthday  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model Walk {
  id                Int      @id @default(autoincrement())
  dog               Dog      @relation(fields: [dogId], references: [id])
  walker            User     @relation(fields: [userId], references: [id])
  dogId             Int
  userId            Int
  time              String
  lengthMinutes     Int
  didPoop           Boolean
  didPee            Boolean
  medicalConcerns   String?
  numJumps          Int
  jumpHandlage      String?
  numMouthings      Int
  mouthingsHandlage String?
  dogsSeen          Int
  dogsSeenReacted   Int
  seenDogReaction   String?
  otherConcerns     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
}

model RW_DataMigration {
  version    String   @id
  name       String
  startedAt  DateTime
  finishedAt DateTime
}
